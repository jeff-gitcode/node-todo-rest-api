{
  "name": "node-todo-rest-api",
  "version": "1.0.0",
  "description": "A REST API for managing todo items using Node.js, TypeScript, and MongoDB.",
  "main": "src/server.ts",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "dev": "ts-node-dev -r tsconfig-paths/register src/server.ts",
    "prepare": "husky install",
    "lint": "eslint \"src/**/*.{ts,js}\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "dotenv": "^16.4.7",
    "express": "^4.17.1",
    "joi": "^17.13.3",
    "mongoose": "^5.10.9",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "eslint": "^9.23.0",
    "globals": "^16.0.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint": "^0.8.19",
    "mockingoose": "^2.16.2",
    "ts-jest": "^29.3.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0"
  },
  "author": "",
  "license": "ISC"
}
